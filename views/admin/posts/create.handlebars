<div class="col-md-4">
    <a href="/admin/posts" class="btn btn-sm btn-primary">All Posts <i class="fa fa-backward"></i></a>
</div>
<div class="col-md-4">
    <h3 class="text-center alert alert-success">New Post</h3>
</div>
<br><br>
        
<div class="col-sm-12">
    <form action="/admin/posts/create" method="post">
    <div class="form-row">
        <div class="form-group col-md-7">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Title">
        </div>

        <div class="form-group col-md-5">
            <label for="status">Status</label>
            <select name="status" id="status" class="form-control">
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
            </select>
        </div>       
    </div>
   
   <div class="form-row">
    <div class="form-group col-md-7">
        <div class="form-check">
        
        <label class="form-check-label" for="allowComments">
           <input class="form-check-input" name="allowComments" type="checkbox" id="allowComments"> Allow Comments
        </label>
        </div>
    </div>

  
   </div>


    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" class="form-control" id="body" cols="30" rows="10"></textarea>
    </div>
    
    <button type="submit" class="btn btn-block btn-primary">Save</button>
    </form>
</div>