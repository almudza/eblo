<div class="col-md-4">
    <a href="/admin/posts/create" class="btn btn-sm btn-primary">Create New Posts <i class="fa fa-plus-circle"></i> </a>
</div>
<div class="col-md-4">
    <h3 class="text-center alert alert-success">All Posts</h3>
</div>
<br><br>
<div class="col-md-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Status</th>
                <th>Allow Comments</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td><a href="/admin/posts/edit/{{id}}">edit</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>